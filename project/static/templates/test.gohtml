<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>testHTML</title>
        <!--Phone pixel density markup-->
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <!--Our FavIcon-->
        <link rel="shortcut icon" type="image/png" href="img/favicons/keyboardFav.png">
        <!--Media Query and stylesheets-->
        <link rel="stylesheet" href="css/test.css">
        <!--Javascript-->
        <script type="text/javascript" src="js/test.js"></script>
        <!--JQuery additions-->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.4.1.min.js"></script>
    </head>
    <body>
       <!--This is a test area for a form.-->
        <form id="my-form"
            action="https://formspree.io/meqgqoal"
            method="POST"
            onload=""
            >
            <label>Email:</label>
            <input type="email" name="email" />
            <label>Subject</label>
            <input type="hidden" name="_subject" value="New submission!" />
            <label>Message:</label>
            <input type="text" name="message" />
            <button id="my-form-button">Submit</button>
            <p id="my-form-status"></p>
        </form>

        <!-- Place this script at the end of the body tag -->

        <script>
        window.addEventListener("DOMContentLoaded", function() {

            // get the form elements defined in your form HTML above
            
            var form = document.getElementById("my-form");
            var button = document.getElementById("my-form-button");
            var status = document.getElementById("my-form-status");

            // Success and Error functions for after the form is submitted
            
            function success() {
                form.reset();
                button.style = "display: none ";
                status.innerHTML = "Thanks!";
            }

            function error() {
                status.innerHTML = "Oops! There was a problem.";
            }

            // handle the form submission event

            form.addEventListener("submit", function(ev) {
                ev.preventDefault();
                var data = new FormData(form);
                ajax(form.method, form.action, data, success, error);
            });
        });
        
        // helper function for sending an AJAX request

        function ajax(method, url, data, success, error) {
            var xhr = new XMLHttpRequest();
            xhr.open(method, url);
            xhr.setRequestHeader("Accept", "application/json");
            xhr.onreadystatechange = function() {
            if (xhr.readyState !== XMLHttpRequest.DONE) return;
            if (xhr.status === 200) {
                success(xhr.response, xhr.responseType);
            } else {
                error(xhr.status, xhr.response, xhr.responseType);
            }
            };
            xhr.send(data);
        }
        </script>
        
        <div id="success_email">

        </div>


        <!--This is for test scrolling through photos over time-->
        
        <br><br><br>
        
        
    </body>                    
</html>